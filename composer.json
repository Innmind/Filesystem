{
    "name": "innmind/filesystem",
    "type": "library",
    "description": "Filesystem abstraction layer",
    "keywords": ["filesystem"],
    "homepage": "http://github.com/Innmind/filesystem",
    "license": "MIT",
    "authors": [
        {
            "name": "Baptiste Langlade",
            "email": "langlade.baptiste@gmail.com"
        }
    ],
    "support": {
        "issues": "http://github.com/Innmind/filesystem/issues"
    },
    "require": {
        "php": "~7.1",
        "innmind/immutable": "~2.0",
        "symfony/filesystem": "^3.0|~4.0",
        "innmind/event-bus": "~2.0",
        "symfony/finder": "~3.0|~4.0",
        "innmind/stream": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "Innmind\\Filesystem\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Innmind\\Filesystem\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "~6.0"
    },
    "scripts": {
        "tests": "vendor/bin/phpunit --colors=always"
    }
}
